#!/bin/bash -e
vault auth enable jwt

# Configure JWT/OIDC auth method using JWKS URL (no client credentials needed)
vault write auth/jwt/config \
    jwks_url="{{ .oauth_jwks_url }}" \
    jwt_supported_algs="RS256" \
    default_role="trcshhivez"

# Create JWT role for standard read-only access (hardcoded - matches code expectations)
vault write auth/jwt/role/trcshhivez \
    bound_audiences="{{ .oauth_client_id }}" \
    user_claim=email \
    role_type=jwt \
    policies=trcshhivez-approle-read \
    ttl=5m \
    @allowed_trcsh_users.json

# Create JWT role for unrestricted write access (hardcoded - matches code expectations)
vault write auth/jwt/role/trcshunrestricted \
    bound_audiences="{{ .oauth_client_id }}" \
    user_claim=email \
    role_type=jwt \
    policies=trcshunrestricted-approle-read \
    ttl=5m \
    @allowed_trcsh_unrestricted_users.json
