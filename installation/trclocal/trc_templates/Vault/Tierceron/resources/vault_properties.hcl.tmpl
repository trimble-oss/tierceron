listener "tcp" {
   address = "127.0.0.1:{{.hostport}}"
   tls_disable = "false"

   tls_cert_file = "{{.vault_root_install}}certs/cert.pem"
   tls_key_file = "{{.vault_root_install}}certs/key.pem"
}

listener "tcp" {
    address     = "{{.vault_ip}}:{{.hostport}}"
    tls_disable = "false"
    tls_cert_file = "{{.vault_root_install}}certs/cert.pem"
    tls_key_file = "{{.vault_root_install}}certs/key.pem"
}
disable_mlock = false
ui = false
default_lease_ttl = "1h"
max_lease_ttl = "8760h"
plugin_directory = "{{.vault_root_install}}plugins/"
